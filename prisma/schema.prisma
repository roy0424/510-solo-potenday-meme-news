// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Meme {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // News info
  newsUrl     String?
  newsTitle   String?
  newsContent String?
  summary     String

  // Meme content
  memeText String
  emojis   String // JSON array as string

  // Image
  imageUrl String
  imageData String? // Base64 encoded image data

  // GIFs
  gifUrls String? // JSON array as string

  // Metadata
  views Int @default(0)
}
